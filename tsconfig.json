{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "reactNamespace": "Cascade",
    "strict": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "src"
  ]
}